body {
  background-image: url('<%= asset_path('grey.png') %>');
}

input {
  margin: 5px;
}

h1, h2 {
  text-align: center;
  font-family: 'Titillium Web', sans-serif;
}

.repo-container h2 {
  font-family: 'Titillium Web', sans-serif;
}

form {
  text-align: center;
}

fieldset {
  border: 0;
}

.commits {
  overflow-y: scroll;
  overflow-x: hidden;
  height: 300px;
  width: 600px;
  margin: 0 auto;
  font-size: 17px;
  font-family: Menlo;
}

.commits li {
  list-style-type: none;
  font-family: 'Menlo', sans-serif;
}

.commits img {
  height: 25px;
  width: 25px;
  border-radius: 25px;
}

.commit-header {
  font-family: 'Titillium Web', sans-serif;
}

.todo-items {
  margin-top: 40px;
}

.todo-items li {
  list-style-type: none;
  text-align: center;
}

.to-do {
  font-size: 30px;
}

.todo-creation {
  margin-top: 25px;
  text-align: center;
}

.todo-form input {
  height: 50px;
  font-size: 30px;
}

.todos input {
  height: 50px;
  font-size: 30px;
}

.todo-input {
  height: 50px;
  font-size: 30px;
  font-family: 'Menlo', sans-serif;
}

.container {
  margin: 5;
  padding: 10px;
}

.container ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  text-align: center;
}

.container li {
  display: inline;
}

.container h1 {
  margin-bottom: 40px;
  font-family: 'Titillium Web', sans-serif;
  color: white;
}

nav {
  background-image: url('<%= asset_path('debut_dark.png') %>')
}

nav p {
  color: white;
  font-family: 'Menlo', serif;
}

form {
  display: inline;
}

.pusher {
  margin-top: 100px;
}

.sha {
  display: inline;
  margin-left: 20px;
  color: lightgray;
}

span {
  font-family: 'Menlo', sans-serif;
}
